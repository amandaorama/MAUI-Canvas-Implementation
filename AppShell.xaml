<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Canvas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Canvas"
    xmlns:local2="clr-namespace:Canvas.views"
    xmlns:local3="clr-namespace:Canvas.dialogue" 
    Shell.FlyoutBehavior="Disabled"
    Title="Canvas">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Instructor"
        ContentTemplate="{DataTemplate local2:InstructorsView}"
        Route="Instructor" />
    <ShellContent
        Title="Student"
        ContentTemplate="{DataTemplate local2:StudentsView}"
        Route="Student" />
    <ShellContent
        Title="Student Details"
        ContentTemplate="{DataTemplate local3:StudentDialogue}"
        Route="StudentDetail" />
    <ShellContent
        Title="Student Information"
        ContentTemplate="{DataTemplate local2:StudentInformationView}"
        Route="StudentInformation" />
    
    
    



</Shell>
